<GridPane alignment="center" hgap="10" maxHeight="1.0E308" maxWidth="1.0E308" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Register_controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <Text text="Actions possibles :" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   <Button fx:id="show_table" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleShowTable" text="SHOW TABLES" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   <Button fx:id="show_schema" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleShowSchema" text="SHOW SCHEMA" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   <Button fx:id="cancel" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleCancel" text="Annuler" GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <Button fx:id="select" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleSelect" text="SELECT" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <Button fx:id="insert" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleInsert" text="INSERT" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Button fx:id="update" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleUpdate" text="UPDATE" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <Button fx:id="drop_table" alignment="CENTER" maxHeight="30.0" maxWidth="120.0" mnemonicParsing="false" onMouseClicked="#handleDropTable" text="DROP TABLE" GridPane.rowIndex="3" />
   
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
